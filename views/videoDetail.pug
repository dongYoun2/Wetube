extends layouts/main
include mixins/videoPlayer
include mixins/commentBlock

block content
    .video-detail__container
        .video__player 
            video(src=`/${video.fileUrl}` controls)
        //- +videoPlayer({
        //-     src:video.fileUrl
        //- })
        .video__info
            if loggedUser && video.creator.id === loggedUser.id
                a(href=routes.editVideo(video.id)) 
                    button Edit video
            h5.video__title=video.title
            pre.video__description=video.description
            if video.views === 1
                span.video__views 1 view
            else
                span.video__views #{video.views} views
            .video__author
                |uploaded by 
                a(href=routes.userDetail(video.creator.id))=video.creator.name
        .video__comments
            include partials/commentForm
            if video.comments.length === 1
                span.comment-number#jsCommentNumber 1 comment
            else
                span.comment-number#jsCommentNumber #{video.comments.length} comments
            ul.comments-list#jsCommentList
                each item in video.comments.reverse()
                    +commentBlock(item)
    script(type="text/javascript").
        let me = !{JSON.stringify(loggedUser)}