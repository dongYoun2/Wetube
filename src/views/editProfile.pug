extends layouts/main

block content
    .edit-profile
        img.u-avatar#jsAvatar(src=loggedUser.avatarUrl)
        .form-container
            form(action=`/users${routes.editProfile}` method="post" enctype="multipart/form-data")
                .fileUpload
                    label(for="jsFileInputForm") Avatar
                    input(type="file" id="jsFileInputForm" name="avatarFile" accept="image/*")
                input(type="text" placeholder="Name" name="name" value=loggedUser.name required)
                input(type="email" placeholder="Email" name="email" value=loggedUser.email)
                input(type="submit" value="Update Profile")